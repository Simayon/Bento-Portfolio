---
import '../styles/global.css';

const { title = 'My Astro Blog', description = 'A blog built with Astro' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
</head>
<body>
    <header class="site-header">
        <div class="header-content">
            <div class="header-top">
                <div class="date-location">
                    <span class="location">SILICON VALLEY EDITION</span>
                    <span class="dot">â€¢</span>
                    {new Date().toLocaleDateString('en-US', {
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    })}
                </div>
                <!-- <div class="masthead">THE PERSONAL CHRONICLE</div> -->
                <!-- <div class="edition">DIGITAL EDITION</div> -->
            </div>
            <div class="header-line"></div>
            <nav class="main-nav">
                <div class="nav-sections">
                    <a href="/" class="nav-item">FRONT PAGE</a>
                    <span class="nav-separator">|</span>
                    <a href="/blog" class="nav-item">ARTICLES</a>
                    <span class="nav-separator">|</span>
                    <a href="/about" class="nav-item">ABOUT THE AUTHOR</a>
                </div>
            </nav>
            <div class="header-line"></div>
        </div>
    </header>

    <slot />

    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-line"></div>
            <div class="footer-info">
                <div class="copyright">
                    {new Date().getFullYear()} My Personal Chronicle. All rights reserved.
                </div>
             </div>
        </div>
    </footer>
</body>
</html>

<style>
    /* Header Styles */
    .site-header {
        padding: 1rem 0;
        background-color: #fff;
        border-bottom: 2px solid #000;
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .header-top {
        text-align: center;
        margin-bottom: 1rem;
    }

    .date-location {
        font-size: 0.9rem;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .location {
        font-weight: 500;
    }

    .dot {
        margin: 0 0.5rem;
    }

    .masthead {
        font-family: "Times New Roman", Times, serif;
        font-size: 3rem;
        font-weight: bold;
        letter-spacing: -0.5px;
        line-height: 1;
        margin: 0.5rem 0;
    }

    .edition {
        font-size: 0.9rem;
        font-weight: 500;
        color: #333;
        margin-top: 0.25rem;
    }

    .header-line {
        border-top: 1px solid #000;
        margin: 0.5rem 0;
    }

    .main-nav {
        padding: 0.5rem 0;
        text-align: center;
    }

    .nav-sections {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }

    .nav-item {
        color: #000;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    .nav-item:hover {
        text-decoration: underline;
    }

    .nav-separator {
        color: #666;
        font-weight: 300;
    }

    /* Footer Styles */
    .site-footer {
        margin-top: 4rem;
        padding: 2rem 0;
        background-color: white;
        border-top: 2px solid var(--grey11);
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .footer-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 1rem 0;
    }

    .copyright {
        font-family: 'Georgia', serif;
        font-size: 0.9rem;
        color: var(--grey6);
    }

    @media (max-width: 768px) {
        .masthead {
            font-size: 2rem;
        }

        .footer-info {
            flex-direction: column;
            text-align: center;
        }

        .footer-nav {
            margin-top: 1rem;
        }

        .header-content, .footer-content {
            padding: 0 1rem;
        }
    }
</style>
