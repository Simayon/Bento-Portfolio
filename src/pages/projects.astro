---
import BaseLayout from '../components/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

function getBentoClass(priority: number) {
    switch (priority) {
        case 1: return 'bento-large';
        case 2: return 'bento-wide';
        case 3: return 'bento-tall';
        default: return 'bento-small';
    }
}
---

<BaseLayout title="Projects - Technical Portfolio">
    <main class="articles-container">
        <div class="newspaper-header">
            <h1 class="headline">TECHNICAL PROJECTS</h1>
            <div class="dateline">Est. 2024 • Volume I • Issue I</div>
            <h2 class="subheadline">Innovative Solutions & Technical Explorations</h2>
        </div>

        <div class="articles-grid">
            {projects.map((project, index) => (
                <article class={`article-card item-${index}`}>
                    <div class="article-image">
                        <img 
                            src={project.data.image || "/images/default-project.jpg"}
                            alt={project.data.title}
                            loading={index === 0 ? "eager" : "lazy"}
                        />
                    </div>
                    <div class="article-content">
                        <div class="article-meta">
                            <span class="category">PROJECT</span>
                            <span class="date">
                                {new Date(project.data.date).toLocaleDateString('en-US', {
                                    year: 'numeric',
                                    month: 'long'
                                })}
                            </span>
                        </div>
                        <h2 class="article-title">{project.data.title}</h2>
                        <p class="article-excerpt">{project.data.description}</p>
                        <a href={`/projects/${project.slug}`} class="read-more">View Project →</a>
                    </div>
                </article>
            ))}
        </div>
    </main>
</BaseLayout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Lora:wght@400;500;600&display=swap');

    .articles-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .newspaper-header {
        text-align: center;
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #1a1a1a;
    }

    .headline {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        font-weight: 900;
        margin: 0;
        line-height: 1.1;
        color: #1a1a1a;
    }

    .dateline {
        font-family: 'Lora', serif;
        font-size: 1rem;
        color: #666;
        margin: 1rem 0;
        letter-spacing: 1px;
    }

    .subheadline {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 400;
        margin: 0;
        color: #1a1a1a;
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(5, minmax(250px, auto));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .article-card {
        position: relative;
        height: 100%;
        transition: transform 0.3s ease;
        overflow: hidden;
        border-radius: 8px;
    }

    .article-card:hover {
        transform: translateY(-5px);
    }

    .article-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 1.5rem;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 60%, transparent 100%);
        color: white;
        display: flex;
        flex-direction: column;
        height: auto;
        transition: all 0.3s ease;
    }

    .article-card:hover .article-content {
        background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.5) 70%, transparent 100%);
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-family: 'Lora', serif;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .article-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        line-height: 1.2;
        color: white;
    }

    .article-excerpt {
        font-family: 'Lora', serif;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        opacity: 0;
        max-height: 0;
        transition: all 0.3s ease;
        color: white;
    }

    .article-card:hover .article-excerpt {
        opacity: 1;
        max-height: 100px;
        margin-bottom: 1rem;
    }

    .article-image {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .article-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%);
        transition: all 0.5s ease;
    }

    .article-card:hover .article-image img {
        filter: grayscale(0%);
        transform: scale(1.05);
    }

    .read-more {
        font-family: 'Lora', serif;
        color: white;
        text-decoration: none;
        font-weight: 600;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .read-more:hover {
        opacity: 1;
    }

    /* Bento Grid Layout */
    .item-0 {
        grid-column: 1;
        grid-row: 1 / span 2;
    }
    
    .item-1 {
        grid-column: 2 / span 2;
        grid-row: 1 / span 2;
    }
    
    .item-2 {
        grid-column: 4;
        grid-row: 1;
    }
    
    .item-3 {
        grid-column: 4;
        grid-row: 2;
    }
    
    .item-4 {
        grid-column: 1 / span 2;
        grid-row: 3;
    }
    
    .item-5 {
        grid-column: 3 / span 2;
        grid-row: 3 / span 2;
    }
    
    .item-6 {
        grid-column: 1 / span 2;
        grid-row: 4 / span 2;
    }
    
    .item-7 {
        grid-column: 3 / span 2;
        grid-row: 5;
    }

    @media (max-width: 768px) {
        .articles-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto;
            gap: 1rem;
        }

        .article-card {
            grid-column: 1 !important;
            grid-row: auto !important;
            height: 300px;
        }

        .headline {
            font-size: 2.5rem;
        }

        .subheadline {
            font-size: 1.2rem;
        }

        .article-excerpt {
            opacity: 1;
            max-height: 100px;
        }
    }
</style>
