---
import { getCollection } from 'astro:content';
import BaseLayout from '../../components/BaseLayout.astro';

const posts = await getCollection('blog');
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Technical Insights - Simayon Thampi">
    <main class="articles-container">
        <div class="newspaper-header">
            <h1 class="headline">TECHNICAL INSIGHTS</h1>
            <div class="dateline">Est. 2024 • Volume I • Issue I</div>
            <h2 class="subheadline">Exploring Embedded Systems, Linux, and Beyond</h2>
        </div>

        <div class="articles-grid">
            {posts.map((post, index) => (
                <article class={`article-card ${index === 0 ? 'featured' : ''}`}>
                    <div class="article-content">
                        <div class="article-meta">
                            <span class="category">{post.data.category || 'TECH'}</span>
                            <span class="date">{new Date(post.data.date).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long'
                            })}</span>
                        </div>
                        <h2 class="article-title">
                            {post.data.title}
                        </h2>
                        <p class="article-excerpt">
                            {post.data.description}
                        </p>
                        <a href={`/blog/${post.slug}`} class="read-more">Read Full Article →</a>
                    </div>
                </article>
            ))}
        </div>
    </main>
</BaseLayout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Lora:wght@400;500;600&display=swap');

    .articles-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .newspaper-header {
        text-align: center;
        margin-bottom: 4rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #1a1a1a;
    }

    .headline {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        font-weight: 900;
        margin: 0;
        line-height: 1.1;
        color: #1a1a1a;
    }

    .dateline {
        font-family: 'Lora', serif;
        font-size: 1rem;
        color: #666;
        margin: 1rem 0;
        letter-spacing: 1px;
    }

    .subheadline {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 400;
        margin: 0;
        color: #1a1a1a;
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    .article-card {
        border: 1px solid #1a1a1a;
        padding: 2px;
        transition: transform 0.2s ease;
    }

    .article-card:hover {
        transform: translateY(-2px);
    }

    .article-card.featured {
        grid-column: 1 / -1;
    }

    .article-content {
        padding: 2rem;
        background-color: #fff9f0;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .category {
        font-family: 'Lora', serif;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 1px;
        color: #1a1a1a;
    }

    .date {
        font-family: 'Lora', serif;
        font-size: 0.8rem;
        color: #666;
    }

    .article-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
        line-height: 1.3;
        color: #1a1a1a;
    }

    .featured .article-title {
        font-size: 2rem;
    }

    .article-excerpt {
        font-family: 'Lora', serif;
        font-size: 1rem;
        line-height: 1.6;
        color: #444;
        margin: 0 0 1.5rem 0;
        flex-grow: 1;
    }

    .read-more {
        font-family: 'Lora', serif;
        font-size: 0.9rem;
        color: #1a1a1a;
        text-decoration: none;
        border-bottom: 1px solid #1a1a1a;
        align-self: flex-start;
        transition: color 0.2s ease;
    }

    .read-more:hover {
        color: #666;
    }

    @media (max-width: 768px) {
        .articles-grid {
            grid-template-columns: 1fr;
        }

        .headline {
            font-size: 2.5rem;
        }

        .subheadline {
            font-size: 1.2rem;
        }

        .article-content {
            padding: 1.5rem;
        }

        .featured .article-title {
            font-size: 1.5rem;
        }
    }
</style>