---
import { getCollection } from 'astro:content';
import BaseLayout from '../../components/BaseLayout.astro';

const posts = await getCollection('blog');
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const featuredPost = posts[0];
const regularPosts = posts.slice(1);
---

<BaseLayout title="Technical Insights - Simayon Thampi">
    <main class="articles-container">
        <div class="newspaper-header">
            <div class="masthead">
                <div class="masthead-top">THE</div>
                <h1 class="headline">TECHNICAL INSIGHTS</h1>
                <div class="masthead-bottom">Est. 2024 • Volume I • Issue I</div>
            </div>
            <div class="header-line"></div>
            <h2 class="subheadline">Exploring Embedded Systems, Linux, and Beyond</h2>
        </div>

        {featuredPost && (
            <article class="featured-article">
                <div class="article-content">
                    <div class="featured-image-container">
                        <img 
                            src={featuredPost.data.image || `https://source.unsplash.com/1200x800/?technology,coding,programming,${featuredPost.data.category || 'featured'}`}
                            alt={featuredPost.data.imageAlt || featuredPost.data.title}
                            class="featured-image"
                            loading="lazy"
                        />
                    </div>
                    <div class="article-meta">
                        <span class="category">{featuredPost.data.category || 'FEATURED'}</span>
                        <span class="date">{new Date(featuredPost.data.date).toLocaleDateString('en-US', {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        })}</span>
                    </div>
                    <h2 class="article-title">
                        <a href={`/blog/${featuredPost.slug}`}>{featuredPost.data.title}</a>
                    </h2>
                    <p class="article-excerpt">
                        {featuredPost.data.description}
                    </p>
                    <div class="article-footer">
                        <span class="reading-time">{featuredPost.data.readingTime} min read</span>
                        <a href={`/blog/${featuredPost.slug}`} class="read-more">Continue Reading →</a>
                    </div>
                </div>
            </article>
        )}

        <div class="section-divider">
            <span class="divider-text">Latest Articles</span>
        </div>

        <div class="articles-grid">
            {regularPosts.map((post) => (
                <article class="article-card">
                    <div class="article-content">
                        <div class="article-image-container">
                            <img 
                                src={post.data.image || `https://source.unsplash.com/600x400/?technology,coding,programming,${post.data.category || 'tech'}`}
                                alt={post.data.imageAlt || post.data.title}
                                class="article-image"
                                loading="lazy"
                            />
                        </div>
                        <div class="article-meta">
                            <span class="category">{post.data.category || 'TECH'}</span>
                            <span class="date">{new Date(post.data.date).toLocaleDateString('en-US', {
                                month: 'long',
                                day: 'numeric'
                            })}</span>
                        </div>
                        <h3 class="article-title">
                            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                        </h3>
                        <p class="article-excerpt">
                            {post.data.description}
                        </p>
                        <div class="article-footer">
                            <span class="reading-time">{post.data.readingTime} min read</span>
                            <a href={`/blog/${post.slug}`} class="read-more">Read Article →</a>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </main>
</BaseLayout>

<style>
    .articles-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .newspaper-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .masthead {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
    }

    .masthead-top {
        font-family: var(--font-title);
        font-size: 1.2rem;
        font-weight: 400;
        color: var(--grey3);
    }

    .headline {
        font-family: var(--font-title);
        font-size: 4rem;
        font-weight: 900;
        margin: 0;
        line-height: 1.1;
        color: var(--grey1);
        letter-spacing: -0.02em;
    }

    .masthead-bottom {
        font-family: var(--font-sans);
        font-size: 0.9rem;
        color: var(--grey3);
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .header-line {
        width: 100%;
        height: 2px;
        background: var(--grey11);
        margin: 2rem 0;
    }

    .subheadline {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        font-weight: 400;
        font-style: italic;
        margin: 0;
        color: var(--grey3);
    }

    .featured-article {
        margin-bottom: 4rem;
        border: 1px solid var(--grey11);
        padding: 2px;
        background: white;
        transition: transform 0.2s ease;
    }

    .featured-article:hover {
        transform: translateY(-2px);
    }

    .featured-article .article-content {
        padding: 0;
        background: var(--grey13);
        overflow: hidden;
    }

    .featured-image-container {
        width: 100%;
        height: 400px;
        overflow: hidden;
        margin-bottom: 0;
    }

    .featured-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .featured-article:hover .featured-image {
        transform: scale(1.05);
    }

    .featured-article .article-meta,
    .featured-article .article-title,
    .featured-article .article-excerpt,
    .featured-article .article-footer {
        padding: 0 3rem;
    }

    .featured-article .article-meta {
        padding-top: 2rem;
    }

    .featured-article .article-footer {
        padding-bottom: 2rem;
    }

    .section-divider {
        position: relative;
        text-align: center;
        margin: 4rem 0;
    }

    .section-divider::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--grey11);
    }

    .divider-text {
        position: relative;
        background: var(--grey14);
        padding: 0 1rem;
        font-family: var(--font-title);
        font-size: 1.2rem;
        color: var(--grey3);
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .article-card {
        border: 1px solid var(--grey11);
        padding: 2px;
        background: white;
        transition: transform 0.2s ease;
    }

    .article-card:hover {
        transform: translateY(-2px);
    }

    .article-content {
        padding: 2rem;
        background: var(--grey13);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .article-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        margin: -2rem -2rem 1.5rem -2rem;
        width: calc(100% + 4rem);
    }

    .article-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .article-card:hover .article-image {
        transform: scale(1.05);
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .category {
        font-family: var(--font-sans);
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 1px;
        color: var(--grey3);
        text-transform: uppercase;
    }

    .date {
        font-family: var(--font-sans);
        font-size: 0.8rem;
        color: var(--grey3);
    }

    .article-title {
        font-family: var(--font-title);
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 1rem 0;
        line-height: 1.3;
    }

    .article-title a {
        color: var(--grey1);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .article-title a:hover {
        color: var(--grey3);
    }

    .article-excerpt {
        font-family: var(--font-serif);
        font-size: 1rem;
        line-height: 1.6;
        color: var(--grey3);
        margin: 0 0 1.5rem 0;
        flex-grow: 1;
    }

    .article-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
        padding-top: 1.5rem;
        border-top: 1px solid var(--grey11);
    }

    .reading-time {
        font-family: var(--font-sans);
        font-size: 0.8rem;
        color: var(--grey3);
    }

    .read-more {
        font-family: var(--font-serif);
        font-size: 0.9rem;
        color: var(--grey2);
        text-decoration: none;
        font-style: italic;
        transition: color 0.2s ease;
    }

    .read-more:hover {
        color: var(--grey3);
    }

    @media (max-width: 768px) {
        .articles-container {
            padding: 1rem;
        }

        .headline {
            font-size: 2.5rem;
        }

        .subheadline {
            font-size: 1.2rem;
        }

        .featured-article .article-content {
            padding: 2rem;
        }

        .featured-article .article-title {
            font-size: 2rem;
        }

        .articles-grid {
            grid-template-columns: 1fr;
        }
    }
</style>