<style>
    .newspaper-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        font-family: "Times New Roman", Times, serif;
    }

    .headline {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        border-bottom: 2px solid #000;
        padding-bottom: 0.5rem;
    }

    .subheadline {
        font-size: 1.5rem;
        text-align: center;
        font-style: italic;
        margin-bottom: 2rem;
    }

    .profile-section {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .profile-image {
        position: relative;
    }

    .profile-image img {
        width: 100%;
        height: auto;
        filter: grayscale(100%);
    }

    .image-caption {
        font-style: italic;
        font-size: 0.9rem;
        text-align: center;
        margin-top: 0.5rem;
    }

    .lead-paragraph {
        font-size: 1.2rem;
        line-height: 1.6;
        font-style: italic;
        padding: 1rem;
        border-left: 3px solid #000;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .bento-item {
        background: #fff;
        padding: 1.5rem;
        border: 1px solid #000;
        position: relative;
    }

    .bento-item.no-border {
        border: none;
        padding: 0;
    }

    .bento-item.featured {
        grid-column: span 2;
    }

    .section-image {
        margin-bottom: 1.5rem;
    }

    .section-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        filter: grayscale(100%);
    }

    .bento-item h3 {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #000;
    }

    .tech-grid {
        display: grid;
        gap: 1.5rem;
    }

    .tech-category h4 {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 0.5rem;
    }

    .skills-grid span {
        background: #f0f0f0;
        padding: 0.5rem;
        text-align: center;
        font-size: 0.9rem;
    }

    .projects-grid {
        display: grid;
        gap: 1.5rem;
    }

    .project {
        border-bottom: 1px solid #ddd;
        padding-bottom: 1rem;
    }

    .project:last-child {
        border-bottom: none;
    }

    .project h4 {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .tech-tag {
        display: inline-block;
        background: #f0f0f0;
        padding: 0.25rem 0.5rem;
        margin-right: 0.5rem;
        font-size: 0.8rem;
        border-radius: 2px;
    }

    .education-details {
        display: grid;
        gap: 1rem;
    }

    .certifications ul {
        list-style-type: none;
        padding-left: 1rem;
        border-left: 2px solid #000;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-links a {
        color: #000;
        text-decoration: none;
        border-bottom: 1px solid #000;
    }

    .social-links a:hover {
        border-bottom-width: 2px;
    }

    .contact-ad {
        border: none !important;
        padding: 0 !important;
    }

    .ad-border {
        border: 3px double #000;
        padding: 1px;
        margin: 1rem 0;
    }

    .ad-content {
        border: 1px solid #000;
        padding: 1.5rem;
        text-align: center;
        background: #fff;
    }

    .contact-ad h3 {
        font-size: 0.8rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        border-bottom: none;
        margin-bottom: 1rem;
    }

    .ad-headline {
        font-size: 2rem;
        font-weight: 900;
        margin: 1rem 0;
        line-height: 1;
        font-family: "Times New Roman", Times, serif;
    }

    .ad-subheadline {
        font-style: italic;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #000;
        padding-bottom: 1rem;
    }

    .contact-ad .contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .contact-ad .location,
    .contact-ad .phone {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .contact-ad .social-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
        align-items: center;
    }

    .contact-ad .link-label {
        font-weight: bold;
        font-size: 0.9rem;
    }

    .contact-ad .social-links a {
        color: #000;
        text-decoration: none;
        border-bottom: 1px solid #000;
        padding: 0.2rem 0;
        font-weight: bold;
    }

    .contact-ad .social-links a:hover {
        border-bottom-width: 2px;
    }

    .ad-footer {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #000;
    }

    @media (max-width: 768px) {
        .bento-item.featured {
            grid-column: span 1;
        }

        .profile-section {
            grid-template-columns: 1fr;
        }

        .profile-image {
            max-width: 300px;
            margin: 0 auto;
        }
    }
</style>