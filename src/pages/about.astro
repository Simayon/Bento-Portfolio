<style>
    .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        font-family: "Times New Roman", Times, serif;
        background: #fffef8;
    }

    .headline {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        border-bottom: 3px double #000;
        padding-bottom: 0.5rem;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .subheadline {
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        text-align: center;
        font-style: italic;
        color: #333;
        margin-bottom: 3rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid #000;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(5, minmax(200px, auto));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .bento-item {
        background: #fffef8;
        padding: 1.5rem;
        transition: transform 0.2s ease;
        position: relative;
    }

    .bento-item h3 {
        font-size: 1.4rem;
        font-weight: 900;
        margin-bottom: 1.2rem;
        color: #000;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 2px solid #000;
        padding-bottom: 0.5rem;
    }

    /* Profile Section */
    .item-0 {
        grid-column: 1 / span 2;
        grid-row: 1 / span 2;
        border: 3px double #000;
        background: #fffef8;
    }

    /* Technical Expertise */
    .item-1 {
        grid-column: 3;
        grid-row: 1;
        border: 1px solid #000;
    }

    /* Current Role */
    .item-2 {
        grid-column: 3;
        grid-row: 2 / span 2;
        border: none;
        background: #f4e9d9;
    }

    /* Education */
    .item-3 {
        grid-column: 1;
        grid-row: 3 / span 2;
        border: 3px double #000;
    }

    /* Projects */
    .item-4 {
        grid-column: 2 / span 2;
        grid-row: 4;
        border: none;
        background: #f4e9d9;
    }

    /* Programming */
    .item-5 {
        grid-column: 1 / span 2;
        grid-row: 5 / span 2;
        border: 1px solid #000;
    }

    /* Contact */
    .item-6 {
        grid-column: 3;
        grid-row: 5 / span 2;
        border: 3px double #000;
        background: #fffef8;
        padding: 0 !important;
    }

    /* Experience */
    .item-7 {
        grid-column: 2;
        grid-row: 3;
        border: none;
        background: #f4e9d9;
    }

    .profile-content {
        display: flex;
        gap: 2rem;
        height: 100%;
    }

    .profile-image {
        flex: 0 0 200px;
    }

    .profile-image img {
        width: 100%;
        height: auto;
        filter: grayscale(100%);
        border: 1px solid #000;
    }

    .image-caption {
        text-align: center;
        margin-top: 0.5rem;
        font-size: 0.9rem;
        font-style: italic;
        color: #333;
    }

    .lead-paragraph {
        flex: 1;
        font-size: 1.2rem;
        line-height: 1.6;
        color: #000;
        font-style: italic;
        padding-left: 1rem;
        border-left: 2px solid #000;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 0.8rem;
    }

    .skills-grid span {
        background: #f4e9d9;
        padding: 0.5rem;
        text-align: center;
        font-size: 0.9rem;
        color: #000;
        border: 1px solid #000;
    }

    .project {
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 2px solid #000;
    }

    .project h4 {
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #000;
    }

    .tech-tags {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tech-tag {
        background: #fffef8;
        padding: 0.2rem 0.6rem;
        font-size: 0.8rem;
        color: #000;
        border: 1px solid #000;
    }

    .contact-content {
        text-align: center;
        padding: 1rem;
    }

    .contact-content h3 {
        font-family: "UnifrakturMaguntia", cursive;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .location, .phone {
        margin: 0.8rem 0;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
        border-top: 1px solid #000;
        padding-top: 1rem;
    }

    .social-link {
        color: #000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-bottom: 1px solid #000;
        font-weight: bold;
        transition: border-bottom-width 0.2s ease;
    }

    .social-link:hover {
        border-bottom-width: 2px;
    }

    .achievements, .highlights {
        list-style: none;
        padding-left: 1rem;
        border-left: 2px solid #000;
    }

    .achievements li, .highlights li {
        margin-bottom: 0.8rem;
        position: relative;
        padding-left: 1.5rem;
    }

    .achievements li::before, .highlights li::before {
        content: "‚Üí";
        position: absolute;
        left: 0;
        color: #000;
    }

    /* Contact Ad Styling */
    .ad-border {
        border: 3px double #000;
        padding: 1px;
        margin: 1rem 0;
    }

    .ad-content {
        border: 1px solid #000;
        padding: 1.5rem;
        text-align: center;
        background: #fff;
    }

    .item-6 h3 {
        font-size: 0.8rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        border-bottom: none;
        margin-bottom: 1rem;
    }

    .ad-headline {
        font-size: 2rem;
        font-weight: 900;
        margin: 1rem 0;
        line-height: 1;
        font-family: "Times New Roman", Times, serif;
    }

    .ad-subheadline {
        font-style: italic;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #000;
        padding-bottom: 1rem;
    }

    .item-6 .contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .item-6 .location,
    .item-6 .phone {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .item-6 .social-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
        align-items: center;
    }

    .item-6 .link-label {
        font-weight: bold;
        font-size: 0.9rem;
    }

    .item-6 .social-links a {
        color: #000;
        text-decoration: none;
        border-bottom: 1px solid #000;
        padding: 0.2rem 0;
        font-weight: bold;
    }

    .item-6 .social-links a:hover {
        border-bottom-width: 2px;
    }

    .ad-footer {
        font-size: 0.8rem;
        font-style: italic;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #000;
    }

    @media (max-width: 768px) {
        .bento-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto;
        }

        .item-0, .item-1, .item-2, .item-3, .item-4, .item-5, .item-6, .item-7 {
            grid-column: 1;
            grid-row: auto;
        }

        .profile-content {
            flex-direction: column;
        }

        .profile-image {
            flex: 0 0 auto;
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }

        .skills-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .lead-paragraph {
            padding-left: 0;
            border-left: none;
            border-top: 2px solid #000;
            padding-top: 1rem;
            margin-top: 1rem;
        }
    }
</style>