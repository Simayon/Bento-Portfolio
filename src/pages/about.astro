---
import BaseLayout from '../components/BaseLayout.astro';
---

<BaseLayout title="About - Simayon Thampi">
    <main class="about-container">
        <div class="newspaper-header">
            <h1 class="headline">THE TECH CHRONICLE</h1>
            <div class="dateline">Est. 2024 • Volume I • Issue I</div>
            <h2 class="subheadline">Simayon Thampi: Bridging Hardware and Software in the Digital Age</h2>
        </div>
        
        <div class="bento-grid">
            <!-- Profile Section (Item 0) -->
            <div class="bento-item item-0">
                <div class="profile-content">
                    <div class="profile-image">
                        <img src="/profile-placeholder.jpg" alt="Simayon Thampi" />
                        <div class="image-caption">Embedded Systems Engineer</div>
                    </div>
                    <div class="lead-paragraph">
                        <p>An intellectually curious design engineer with expertise in Linux kernel development, embedded systems, and driver programming.</p>
                        <p>Passionate about robotics, exploring fields like cybersecurity, web development, and hardware programming.</p>
                        <p>A problem-solver at heart, blending technical expertise with creativity to drive innovation.</p>
                    </div>
                </div>
            </div>

            <!-- Technical Expertise (Item 1) -->
            <div class="bento-item item-1">
                <h3>TECHNICAL EXPERTISE</h3>
                <div class="skills-grid">
                    <span>Linux Kernel</span>
                    <span>RTOS</span>
                    <span>Embedded Systems</span>
                    <span>Driver Development</span>
                </div>
            </div>

            <!-- Current Position (Item 2) -->
            <div class="bento-item item-2">
                <h3>CURRENT ROLE</h3>
                <div class="role-content">
                    <p class="role">Embedded Design Engineer</p>
                    <p class="company">Digital Core Technologies</p>
                    <ul class="achievements">
                        <li>Linux Kernel Development</li>
                        <li>FPGA Programming</li>
                        <li>IoT Solutions</li>
                        <li>RTOS Integration</li>
                        <li>Device Driver Development</li>
                    </ul>
                </div>
            </div>

            <!-- Education (Item 3) -->
            <div class="bento-item item-3">
                <h3>EDUCATION</h3>
                <div class="education-content">
                    <div class="degree-info">
                        <p class="degree">BTech in Robotics & Automation</p>
                        <p class="institution">Toch Institute of Science and Technology</p>
                        <p class="grade">CGPA: 9.02</p>
                    </div>
                    <div class="certifications">
                        <h4>Certifications</h4>
                        <ul>
                            <li>FANUC Certified Robot Programmer</li>
                            <li>Bosch Rexroth Automation Specialist</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Projects (Item 4) -->
            <div class="bento-item item-4">
                <h3>FEATURED PROJECTS</h3>
                <div class="projects-grid">
                    <div class="project">
                        <h4>Autonomous Shopping Cart</h4>
                        <p>RFID-based autonomous system</p>
                        <div class="tech-tags">
                            <span class="tech-tag">Computer Vision</span>
                            <span class="tech-tag">ROS</span>
                        </div>
                    </div>
                    <div class="project">
                        <h4>Custom LLM Web Crawler</h4>
                        <p>Multi-agent monitoring system</p>
                        <div class="tech-tags">
                            <span class="tech-tag">Python</span>
                            <span class="tech-tag">LangChain</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Programming Skills (Item 5) -->
            <div class="bento-item item-5">
                <h3>PROGRAMMING</h3>
                <div class="programming-content">
                    <div class="skills-category">
                        <h4>Languages</h4>
                        <div class="skills-grid">
                            <span>C/C++</span>
                            <span>Python</span>
                            <span>Rust</span>
                            <span>Assembly</span>
                        </div>
                    </div>
                    <div class="skills-category">
                        <h4>Tools & Frameworks</h4>
                        <div class="skills-grid">
                            <span>Git</span>
                            <span>Docker</span>
                            <span>ROS</span>
                            <span>Qt</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact (Item 6) -->
            <div class="bento-item item-6">
                <div class="ad-border">
                    <div class="ad-content">
                        <div class="ad-eyebrow">-- CLASSIFIED AD --</div>
                        <div class="ad-headline">TECHNICAL EXPERTISE</div>
                        <div class="ad-headline-2">AVAILABLE</div>
                        
                        <div class="ad-text">
                            Experienced embedded systems engineer with expertise in Linux kernel development 
                            seeks challenging opportunities. Currently based in <mark class="highlight-yellow">Kochi, Ernakulam</mark>. 
                            For immediate consultation, reach out at <mark class="highlight-green">+91 89435 21732</mark>. 
                            Specialized in driver development, RTOS integration, and hardware programming.
                        </div>

                        <div class="ad-divider">⎯⎯⎯ DIGITAL PRESENCE ⎯⎯⎯</div>
                        
                        <div class="social-links">
                            <a href="https://simayonthampi.me" class="social-link">Portfolio</a>
                            <span class="dot">•</span>
                            <a href="https://github.com/Simayon" class="social-link">GitHub</a>
                            <span class="dot">•</span>
                            <a href="https://www.linkedin.com/in/simayon-thampi-ab52b9190/" class="social-link">LinkedIn</a>
                        </div>

                        <div class="ad-footer">
                            *References available upon request
                        </div>
                    </div>
                </div>
            </div>

            <!-- Experience (Item 7) -->
            <div class="bento-item item-7">
                <h3>PREVIOUS ROLE</h3>
                <div class="experience-content">
                    <p class="company">Trizlabs Pvt Ltd</p>
                    <p class="position">Robotics Intern</p>
                    <p class="duration">Sept 2022 - June 2023</p>
                    <ul class="highlights">
                        <li>ROS Development</li>
                        <li>Sensor Integration</li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;600&display=swap');

    .about-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff9f0;
        color: #1a1a1a;
        font-family: 'Lora', serif;
    }

    .newspaper-header {
        text-align: center;
        border-bottom: 3px double #1a1a1a;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

    .headline {
        font-family: 'Playfair Display', serif;
        font-size: 3.5rem;
        font-weight: 700;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .dateline {
        font-family: 'Lora', serif;
        font-style: italic;
        margin: 0.5rem 0;
        color: #666;
    }

    .subheadline {
        font-family: 'Playfair Display', serif;
        font-size: 1.8rem;
        font-weight: 400;
        margin: 1rem 0;
        border-top: 1px solid #1a1a1a;
        padding-top: 1rem;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(5, minmax(200px, auto));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    /* Grid Layout Positioning */
    .item-0 {
        grid-column: 1 / span 2;
        grid-row: 1 / span 2;
        border: 3px double #1a1a1a;
    }

    .item-1 {
        grid-column: 3;
        grid-row: 1;
        border: 1px solid #1a1a1a;
    }

    .item-2 {
        grid-column: 3;
        grid-row: 2 / span 2;
        background: #f8f4eb;
    }

    .item-3 {
        grid-column: 1;
        grid-row: 3 / span 2;
        border: 3px double #1a1a1a;
    }

    .item-4 {
        grid-column: 2 / span 2;
        grid-row: 4;
        background: #f8f4eb;
    }

    .item-5 {
        grid-column: 1 / span 2;
        grid-row: 5 / span 2;
        border: 1px solid #1a1a1a;
    }

    .item-6 {
        grid-column: 3;
        grid-row: 5 / span 2;
        border: 3px double #1a1a1a;
        padding: 0 !important;
    }

    .item-7 {
        grid-column: 2;
        grid-row: 3;
        background: #f8f4eb;
    }

    .bento-item {
        background-color: #fff;
        padding: 1.5rem;
        position: relative;
        box-shadow: 3px 3px 0 rgba(26, 26, 26, 0.1);
    }

    .bento-item h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: 700;
        border-bottom: 2px solid #1a1a1a;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .profile-content {
        display: flex;
        gap: 2rem;
        height: 100%;
    }

    .profile-image {
        flex: 0 0 200px;
    }

    .profile-image img {
        width: 100%;
        height: auto;
        border: 1px solid #1a1a1a;
        filter: grayscale(100%);
    }

    .image-caption {
        text-align: center;
        font-style: italic;
        margin-top: 0.5rem;
        font-size: 0.9rem;
    }

    .lead-paragraph {
        flex: 1;
        font-size: 1.2rem;
        line-height: 1.6;
        padding-left: 1rem;
        border-left: 2px solid #1a1a1a;
    }

    .lead-paragraph p:first-of-type::first-letter {
        initial-letter: 3;
        -webkit-initial-letter: 3;
        color: #1a1a1a;
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        margin-right: 0.5rem;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 0.8rem;
    }

    .skills-grid span {
        background: #f8f4eb;
        padding: 0.5rem;
        text-align: center;
        font-size: 0.9rem;
        border: 1px solid #1a1a1a;
    }

    .project {
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 2px solid #1a1a1a;
    }

    .project:last-child {
        margin-bottom: 0;
    }

    .project h4 {
        font-family: 'Playfair Display', serif;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .tech-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tech-tag {
        background: #f8f4eb;
        padding: 0.2rem 0.6rem;
        font-size: 0.8rem;
        border: 1px solid #1a1a1a;
    }

    .achievements, .highlights {
        list-style: none;
        padding-left: 1rem;
        border-left: 2px solid #1a1a1a;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .achievements li, .highlights li {
        margin-bottom: 0.8rem;
        position: relative;
        padding-left: 1.5rem;
    }

    .achievements li::before, .highlights li::before {
        content: "→";
        position: absolute;
        left: 0;
        color: #1a1a1a;
    }

    /* Contact Ad Styling */
    .ad-border {
        border: 3px double #1a1a1a;
        padding: 2px;
        margin: 0;
        background: #fff9f0;
    }

    .ad-content {
        border: 1px solid #1a1a1a;
        padding: 1.5rem;
        text-align: center;
        background: #fff;
        position: relative;
    }

    .ad-eyebrow {
        font-family: 'Lora', serif;
        font-size: 0.8rem;
        letter-spacing: 2px;
        margin-bottom: 1rem;
        color: #666;
    }

    .ad-headline {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 900;
        line-height: 1;
        margin: 0;
    }

    .ad-headline-2 {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 900;
        line-height: 1;
        margin-bottom: 1rem;
    }

    .ad-text {
        font-family: 'Lora', serif;
        font-size: 1.1rem;
        line-height: 1.6;
        text-align: left;
        margin: 2rem 0;
        padding: 0 0.5rem;
    }

    mark.highlight-yellow {
        background: linear-gradient(120deg, rgba(255, 246, 0, 0.4) 0%, rgba(255, 246, 0, 0.4) 100%);
        padding: 0 4px;
        border-radius: 2px;
        font-weight: 600;
        box-decoration-break: clone;
        -webkit-box-decoration-break: clone;
        text-shadow: 1px 1px 0 #fff;
    }

    mark.highlight-green {
        background: linear-gradient(120deg, rgba(77, 255, 77, 0.3) 0%, rgba(77, 255, 77, 0.3) 100%);
        padding: 0 4px;
        border-radius: 2px;
        font-weight: 600;
        box-decoration-break: clone;
        -webkit-box-decoration-break: clone;
        text-shadow: 1px 1px 0 #fff;
    }

    .ad-divider {
        font-family: 'Lora', serif;
        font-size: 0.8rem;
        color: #666;
        margin: 1.5rem 0;
        letter-spacing: 1px;
    }

    .social-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .social-link {
        color: #1a1a1a;
        text-decoration: none;
        font-family: 'Lora', serif;
        font-size: 0.9rem;
        padding: 0.3rem 0;
        border-bottom: 1px solid #1a1a1a;
        transition: all 0.2s ease;
    }

    .dot {
        color: #666;
        font-size: 0.8rem;
    }

    .social-link:hover {
        border-bottom-width: 2px;
    }

    .ad-footer {
        font-family: 'Lora', serif;
        font-size: 0.8rem;
        font-style: italic;
        color: #666;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #ddd;
    }

    @media (max-width: 768px) {
        .bento-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto;
        }

        .item-0, .item-1, .item-2, .item-3, .item-4, .item-5, .item-6, .item-7 {
            grid-column: 1;
            grid-row: auto;
        }

        .profile-content {
            flex-direction: column;
        }

        .profile-image {
            flex: 0 0 auto;
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
        }

        .lead-paragraph {
            padding-left: 0;
            border-left: none;
            border-top: 2px solid #1a1a1a;
            padding-top: 1rem;
            margin-top: 1rem;
        }

        .headline {
            font-size: 2.5rem;
        }

        .subheadline {
            font-size: 1.4rem;
        }
    }
</style>