<style>
    .newspaper-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        font-family: "Times New Roman", Times, serif;
    }

    .headline {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        border-bottom: 2px solid #000;
        padding-bottom: 0.5rem;
    }

    .subheadline {
        font-size: 1.5rem;
        text-align: center;
        font-style: italic;
        margin-bottom: 2rem;
    }

    .lead-paragraph {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
        padding: 1rem;
        border: 1px solid #ccc;
        font-style: italic;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .bento-item {
        background: #fff;
        padding: 1.5rem;
        border: 1px solid #000;
        position: relative;
    }

    .bento-item.featured {
        grid-column: span 2;
    }

    .bento-item h3 {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #000;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 0.5rem;
    }

    .skills-grid span {
        background: #f0f0f0;
        padding: 0.5rem;
        text-align: center;
        font-size: 0.9rem;
    }

    .project {
        margin-bottom: 1rem;
    }

    .project h4 {
        font-weight: bold;
        margin-bottom: 0.25rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-links a {
        color: #000;
        text-decoration: none;
        border-bottom: 1px solid #000;
    }

    .social-links a:hover {
        border-bottom-width: 2px;
    }

    @media (max-width: 768px) {
        .bento-item.featured {
            grid-column: span 1;
        }
    }
</style>