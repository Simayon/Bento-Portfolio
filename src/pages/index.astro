---
import BaseLayout from '../components/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get latest blog posts
const posts = await getCollection('blog');
const latestPosts = posts
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 3);
---

<BaseLayout title="Welcome to My Personal Chronicle">
    <main class="bento-grid">
        <!-- Featured Section -->
        <section class="bento-item featured">
            <div class="section-label">Featured Story</div>
            <h2>Welcome to My Digital Chronicle</h2>
            <p class="lead">Exploring technology, development, and personal insights through a modern lens with a classic touch.</p>
            <a href="/about" class="read-more">Read More â†’</a>
        </section>

        <!-- Latest Posts -->
        <section class="bento-item latest-posts">
            <div class="section-label">Latest Articles</div>
            <div class="post-list">
                {latestPosts.map((post) => (
                    <article class="post-preview">
                        <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
                        <time>{new Date(post.data.date).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        })}</time>
                    </article>
                ))}
            </div>
        </section>

        <!-- About Section -->
        <section class="bento-item about">
            <div class="section-label">About the Author</div>
            <div class="about-content">
                <img src="/placeholder-avatar.jpg" alt="Author" class="author-image" />
                <div>
                    <h3>John Doe</h3>
                    <p>A passionate developer sharing insights about technology and life.</p>
                </div>
            </div>
        </section>

        <!-- Projects Showcase -->
        <section class="bento-item projects">
            <div class="section-label">Notable Projects</div>
            <div class="project-grid">
                <div class="project">
                    <h4>Project One</h4>
                    <p>A revolutionary approach to web development</p>
                </div>
                <div class="project">
                    <h4>Project Two</h4>
                    <p>Innovative solutions for modern problems</p>
                </div>
            </div>
        </section>

        <!-- Quick Links -->
        <section class="bento-item quick-links">
            <div class="section-label">Quick Links</div>
            <nav class="links-grid">
                <a href="/blog">All Articles</a>
                <a href="/projects">Projects</a>
                <a href="/about">About Me</a>
                <a href="/contact">Contact</a>
            </nav>
        </section>

        <!-- Tech Stack -->
        <section class="bento-item tech-stack">
            <div class="section-label">Tech Expertise</div>
            <div class="tech-list">
                <span class="tech-item">JavaScript</span>
                <span class="tech-item">React</span>
                <span class="tech-item">Node.js</span>
                <span class="tech-item">Python</span>
            </div>
        </section>
    </main>
</BaseLayout>

<style>
    .bento-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        padding: 1.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .bento-item {
        background: white;
        border: 1px solid var(--grey11);
        padding: 1.5rem;
        position: relative;
        font-family: 'Georgia', serif;
    }

    .section-label {
        font-family: 'Times New Roman', serif;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--grey6);
        border-bottom: 2px solid var(--grey11);
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }

    /* Featured Story */
    .featured {
        grid-column: span 2;
        grid-row: span 2;
    }

    .featured h2 {
        font-size: 2.5rem;
        font-family: 'Times New Roman', serif;
        margin: 1rem 0;
        line-height: 1.2;
    }

    .lead {
        font-size: 1.2rem;
        line-height: 1.6;
        color: var(--grey3);
        margin-bottom: 1.5rem;
    }

    /* Latest Posts */
    .latest-posts {
        grid-column: span 1;
        grid-row: span 2;
    }

    .post-preview {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--grey11);
    }

    .post-preview h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .post-preview time {
        font-style: italic;
        color: var(--grey6);
        font-size: 0.9rem;
    }

    /* About Section */
    .about {
        grid-column: span 2;
    }

    .about-content {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .author-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
    }

    /* Projects */
    .projects {
        grid-column: span 2;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    /* Quick Links */
    .quick-links {
        grid-column: span 1;
    }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    .links-grid a {
        color: var(--grey2);
        text-decoration: none;
        padding: 0.5rem;
        font-size: 0.9rem;
        text-align: center;
        border: 1px solid var(--grey11);
        transition: all 0.2s ease;
    }

    .links-grid a:hover {
        background: var(--grey13);
        color: var(--brandcolor);
    }

    /* Tech Stack */
    .tech-stack {
        grid-column: span 1;
    }

    .tech-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-item {
        background: var(--grey13);
        padding: 0.3rem 0.8rem;
        border-radius: 3px;
        font-size: 0.9rem;
        color: var(--grey3);
    }

    /* Common Styles */
    a {
        color: var(--brandcolor);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    a:hover {
        color: var(--grey1);
    }

    .read-more {
        display: inline-block;
        margin-top: 1rem;
        font-style: italic;
    }

    @media (max-width: 1024px) {
        .bento-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .featured {
            grid-column: span 2;
        }
    }

    @media (max-width: 768px) {
        .bento-grid {
            grid-template-columns: 1fr;
        }

        .bento-item {
            grid-column: span 1 !important;
            grid-row: span 1 !important;
        }

        .project-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
